<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherWise" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_salmon</item>
        <item name="colorPrimaryVariant">@color/salmon</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/peach_yellow</item>
        <item name="colorSecondaryVariant">@color/peach_orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeOverlay.WeatherWise.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/salmon</item>
        <item name="fullscreenTextColor">@color/white</item>
    </style>
</resources>